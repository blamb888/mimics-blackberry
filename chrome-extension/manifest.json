{
  "name": "Mimic's Blackberry chrome extension",
  "version": "1.0",
  "description": "For seemless integration with Roll20 & other virtual tabletops",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
    "content_scripts": [{
      "matches": [ "<all_urls>" ],
      "js": ["content.js"]
     }],
    "permissions": [
      "activeTab", "tabs"
    ],
    "browser_action": {
      "default_title": "Mimics Blackberry",
      "default_popup": "popup.html"
    }
}
