<div class="container">
  <h6>Calendar Creator: <%= @calendar.user.email %></h6>
  <h6>Start Day:<%= @calendar.start_day %></h6>
  <h6>Start Year:<%= @calendar.start_year %></h6>
  <h6>Current Day:<%= @calendar.current_day %></h6>
  <h6>Months:<%= @calendar.months %></h6>
  <h6>Weekdays:<%= @calendar.weekdays %></h6>
  <div id="calendar-container" class="" style="display:grid;
  grid-template-columns: repeat(7, 1fr);
  grid-auto-flow: dense;
  grid-gap: 2px 10px;">
    <% @calendar.months.values.each do |number_of_days|%>
      <% counter = 0 %>
      <% days_of_week_counter = 0 %>
      <% number_of_days.times do %>
        <% counter += 1  %>
        <div style="width: 150px; height: 100px; margin: 0px; border: solid 1px gray; display: inline-block;">
          <%= counter %>
          <%= @calendar.weekdays.keys[days_of_week_counter].capitalize %>
        </div>
        <% days_of_week_counter += 1 %>
        <% if days_of_week_counter == @calendar.weekdays.length then days_of_week_counter = 0 %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
