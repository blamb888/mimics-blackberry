<div>
  <ul class="list-inline tabs-underlined">
    <li>
      <a href="/calendars" class="tab-underlined active">Games</a>
    </li>
    <li>
      <a href="#" class="tab-underlined">Profile</a>
    </li>
    <li>
      <a href="#" class="tab-underlined">GM's Tool Kit</a>
    </li>
  </ul>
</div>
<div class="background-index">
  <h6><strong>Recent Games<span></span></strong></h6>
  <div class="container-index mt-1">
    <div class="col-md-3">
      <div class="card profile-card-3">
        <div class="background-block">
          <%= image_tag "wizard.jpg", class: "background" %>
        </div>
        <div class="profile-thumb-block">
          <img src="<%= image_path 'Bilyur_token_2.png' %>" alt="profile-image" class="profile"/>
        </div>
        <div class="card-content">
          <h2><%= @user.email %><small>Wiley Wizard</small></h3>
          <ul style="list-style: none;">
            <li><%= link_to 'Plus' %> | <%= link_to 'Manage Subscription' %></li>
            <li><%= link_to 'Help Center' %></li>
            <li>Member since: 09/21/18</li>
            <li>Hours Played: 951</li>
          </ul>
          <!-- <div class="icon-block"><a href="#"><i class="fa fa-facebook"></i></a><a href="#"> <i class="fa fa-twitter"></i></a><a href="#"> <i class="fa fa-google-plus"></i></a></div> -->
          <%= link_to 'New Calendar', new_calendar_path, class: "btn btn-success m-3 text-center text-decoration-none" %>
        </div>
      </div>
    </div>
    <div class="cards-vault">
      <div class="col-md-9">
        <div class="calendars">
          <div class="cards">
            <% @calendars.each do |calendar| %>
              <%= link_to calendar_path(calendar) do %>
                <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url(<%= image_path 'eberron.jpg' %>)">
                  Eberron
                </div>
              <% end %>
            <% end %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url(<%= image_path 'middleearth.jpg' %>)">
              <span>
                <h2>Middle </h2>
                <h2>Earth</h2>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>