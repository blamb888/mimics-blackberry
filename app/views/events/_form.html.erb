<% if policy(Event).create? %>
  <%= simple_form_for [@calendar, @event] do |f| %>
    <%= f.input :day_number, as: :hidden, input_html: { value: counter } %>
    <%= f.input :name, required: true %>
    <%= f.input :description, required: true %>
    <%= f.input :category, required: true, collection: Event::CATEGORIES, include_blank: true, style: "m-1" %>
    <%= f.submit "Add Event", class: "btn btn-primary mb-3"%>
  <% end %>
<% end %>
